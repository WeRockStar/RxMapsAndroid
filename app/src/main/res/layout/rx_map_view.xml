<?xml version="1.0" encoding="utf-8"?>

<com.tehmou.rxmaps.view.MapView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.tehmou.rxmaps.view.MapCanvasView
        android:id="@+id/rx_map_view_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/rx_map_view_zoom_in"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="+"/>
    <Button
        android:id="@+id/rx_map_view_zoom_out"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:text="-"/>
</com.tehmou.rxmaps.view.MapView>